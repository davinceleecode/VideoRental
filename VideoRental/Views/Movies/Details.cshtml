@model VideoRental.Models.Movie

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ViewBag.Title</h2>
<ul>
    <li>
        Genre: @Model.Genre.Name
    </li>
    <li>
        Release Date: @Model.ReleaseDate
    </li>
    <li>
        Date Added: @Model.DateAdded
    </li>
    <li>
        Number in Stock: @Model.NumberInStock
    </li>
</ul>
